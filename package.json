{
	"name": "@natlibfi/fixugen-http-server",
	"description": "Generate unit tests for HTTP servers with fixugen",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/fixugen-http-server-js",
	"bugs": {
		"url": "https://github.com/natlibfi/fixugen-http-server-js/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/fixugen-http-server-js.git"
	},
	"license": "LGPL-3.0+",
	"version": "1.0.5-alpha.1",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=12"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test nyc mocha --require @babel/register",
		"test": "npm run lint && npm run test:base -- src/*.spec.js && npm run coverage",
		"test:dev": "npm run lint:dev && npm run test:base -- src/*.spec.js && npm run coverage",
		"coverage": "nyc check-coverage --per-file",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=test nodemon -w src -w test-fixtures --exec 'npm run test:dev'"
	},
	"dependencies": {
		"@natlibfi/fixugen": "^1.1.0",
		"@natlibfi/fixura": "^2.2.1",
		"chai-http": "^4.3.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.18.10",
		"@babel/core": "^7.18.13",
		"@babel/eslint-parser": "^7.18.9",
		"@babel/node": "^7.18.10",
		"@babel/preset-env": "^7.18.10",
		"@babel/register": "^7.18.9",
		"@natlibfi/eslint-config-melinda-backend": "^2.0.1",
		"babel-plugin-istanbul": "^6.1.1",
		"chai": "^4.3.6",
		"cross-env": "^7.0.3",
		"eslint": "^8.23.0",
		"express": "^4.18.1",
		"mocha": "^10.0.0",
		"node-fetch": "^2.6.7",
		"nodemon": "^2.0.19",
		"nyc": "^15.0.1"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "12"
					}
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul"
				]
			}
		}
	},
	"nyc": {
		"exclude": [
			"*/*.spec.js"
		],
		"reporter": [
			"lcov",
			"html"
		],
		"require": [
			"@babel/register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
